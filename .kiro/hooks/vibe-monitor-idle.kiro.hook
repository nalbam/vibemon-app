{
  "name": "Vibe Monitor - Idle",
  "version": "1.0.0",
  "description": "에이전트 작업 완료 시 Vibe Monitor에 idle 상태 전송",
  "when": {
    "type": "agentStop"
  },
  "then": {
    "type": "runCommand",
    "command": "curl -s -X POST http://127.0.0.1:19280/status -H 'Content-Type: application/json' -d '{\"state\":\"idle\",\"event\":\"AgentStop\",\"character\":\"kiro\"}' --connect-timeout 1 --max-time 2 > /dev/null 2>&1 || true"
  }
}
