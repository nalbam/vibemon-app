{
  "name": "vibe-monitor",
  "version": "1.4.0.dev0",
  "description": "AI assistant status monitor",
  "main": "main.js",
  "bin": {
    "vibe-monitor": "./bin/cli.js"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:dmg": "electron-builder --mac dmg",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "author": "nalbam",
  "license": "MIT",
  "keywords": [
    "vibe-monitor",
    "claude-code",
    "kiro",
    "ai-assistant",
    "status-monitor",
    "electron",
    "pixel-art"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nalbam/vibe-monitor.git"
  },
  "homepage": "https://nalbam.github.io/vibe-monitor/",
  "bugs": {
    "url": "https://github.com/nalbam/vibe-monitor/issues"
  },
  "dependencies": {
    "canvas": "^3.2.1",
    "electron": "^33.0.0",
    "electron-store": "^8.2.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "electron-builder": "^25.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0"
  },
  "files": [
    "README.md",
    "bin/",
    "main.js",
    "preload.js",
    "index.html",
    "stats.html",
    "renderer.js",
    "styles.css",
    "assets/",
    "modules/",
    "shared/"
  ],
  "build": {
    "appId": "com.nalbam.vibe-monitor",
    "productName": "Vibe Monitor",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
