{
  "id": "vibemon-bridge",
  "name": "VibeMon Bridge",
  "description": "Real-time status bridge for VibeMon (ESP32/Desktop)",
  "version": "1.0.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "projectName": {
        "type": "string",
        "default": "OpenClaw",
        "description": "Project name displayed on VibeMon"
      },
      "character": {
        "type": "string",
        "default": "claw",
        "description": "Character to display (clawd, kiro, claw)"
      },
      "serialEnabled": {
        "type": "boolean",
        "default": true,
        "description": "Enable serial output to ESP32"
      },
      "httpEnabled": {
        "type": "boolean",
        "default": false,
        "description": "Enable HTTP output to VibeMon Desktop"
      },
      "httpUrl": {
        "type": "string",
        "default": "http://127.0.0.1:19280/status",
        "description": "VibeMon Desktop HTTP endpoint"
      },
      "debug": {
        "type": "boolean",
        "default": false,
        "description": "Enable debug logging"
      }
    }
  },
  "uiHints": {
    "projectName": {
      "label": "Project Name",
      "help": "Name shown on VibeMon display"
    },
    "character": {
      "label": "Character",
      "help": "clawd (orange), kiro (white), claw (red)"
    },
    "serialEnabled": {
      "label": "Serial Output",
      "help": "Send status to ESP32 via USB serial"
    },
    "httpEnabled": {
      "label": "HTTP Output",
      "help": "Send status to VibeMon Desktop app"
    },
    "httpUrl": {
      "label": "HTTP URL",
      "help": "VibeMon Desktop HTTP endpoint",
      "advanced": true
    },
    "debug": {
      "label": "Debug Mode",
      "help": "Enable verbose logging",
      "advanced": true
    }
  }
}
