# Vibe Monitor Environment Variables for Claude Code
#
# Setup:
#   cp config/claude/hooks/.env.sample ~/.claude/.env.local
#
# Or source from shell profile (~/.zshrc or ~/.bashrc):
#   if [ -f ~/.claude/.env.local ]; then
#     source ~/.claude/.env.local
#   fi

# Debug mode (1: enabled, 0: disabled)
# export DEBUG=1

# Desktop App path (auto-launches on session start if not running)
# e.g., ~/vibe-monitor/desktop
export VIBE_MONITOR_DESKTOP=""

# Desktop App URL (HTTP endpoint)
# e.g., http://127.0.0.1:19280
export VIBE_MONITOR_URL=""

# ESP32 USB Serial port (optional)
# e.g., /dev/cu.usbserial-0001, /dev/ttyUSB0
# Check with: ls /dev/cu.* or ls /dev/tty*
export ESP32_SERIAL_PORT=""

# ESP32 HTTP URL (optional)
# e.g., http://192.168.1.100
export ESP32_HTTP_URL=""
