{
  "name": "Vibe Monitor - File Edited",
  "version": "1.0.0",
  "description": "Send working state to Vibe Monitor on file save",
  "when": {
    "type": "fileEdited",
    "patterns": ["**/*"]
  },
  "then": {
    "type": "runCommand",
    "command": "python3 ~/.kiro/hooks/vibe-monitor.py fileEdited"
  }
}
