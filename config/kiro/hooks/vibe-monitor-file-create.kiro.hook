{
  "name": "Vibe Monitor - File Create",
  "version": "1.0.0",
  "description": "Send working state to Vibe Monitor on file create",
  "when": {
    "type": "fileCreate",
    "patterns": ["**/*"]
  },
  "then": {
    "type": "runCommand",
    "command": "python3 ~/.kiro/hooks/vibe-monitor.py fileCreate"
  }
}
